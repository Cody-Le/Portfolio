---
import type { ProjectData } from "../lib/objects/project";
import type { BadgeData } from "../lib/objects/badge";
const {
    project_data: ProjectData,
} = Astro.props;
const {
    links: { play : href },
    title,
    summary = "",
    image = "",
    badges = [],
} = ProjectData;
---
<a href={href} class="">
    <div class="flex flex-row w-[calc(90vw)] h-80  rounded-lg shadow hover:shadow-lg transition-shadow duration-200 overflow-hidden border dark:border-gray-800  hover:scale-[1.01] p-2 mb-10">
        {<main class="h-full grow bg-gray-200"></main>}
        
    <div class="flex flex-col w-[60%] bg-white">
        <div class="p-4 lg:text-center">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
            {summary ? <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">{summary}</p> : null}
        </div>   
        {badges.length > 0 ? 
            <div class="px-4 pb-4 flex flex-wrap gap-2 justify-center">
                {badges.map((badge: BadgeData) => (
                    <span class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">{badge.label}</span>
                ))}
            </div>
        : null}
    </div>
    
    </div>
</a>