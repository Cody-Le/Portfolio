            <!-- Desktop menu -->
            <div class="hidden md:flex md:items-center md:space-x-6 font-source-serif-4">
                <a href="/Portfolio" class= "text-text-primary text-text-primary">Home</a>
                <a href="/Portfolio/projects" class=" text-text-primary">Projects</a>
    
                <a href="/Portfolio/about_me" class=" text-text-primary">About Me</a>
                <a href="#contact" class=" text-text-primary">Contact</a>
            </div>

            <!-- Mobile hamburger -->
            <div class="md:hidden">
                <button id="nav-toggle" type="button" aria-controls="mobile-menu" aria-expanded="false" class="inline-flex items-center justify-center p-2 rounded-md text-text-primary hover:bg-gray-200/10 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-text-primary">
                    <svg id="icon-open" class="h-6 w-6 text-text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <svg id="icon-close" class="h-6 w-6 hidden text-text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
