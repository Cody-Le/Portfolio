    <!-- Mobile menu, show/hide based on button -->
    <div id="mobile-menu" class="md:hidden hidden px-2 pt-2 pb-3 space-y-1">
        <a href="/Portfolio" class="block px-3 py-2 rounded-md text-base font-medium text-text-primary">Home</a>
        <a href="/Portfolio/projects" class="block px-3 py-2 rounded-md text-base font-medium text-text-primary">Projects</a>
